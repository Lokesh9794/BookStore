@model BookModel

<div class="card mb-4 shadow-sm">
                                    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl)? "/images/NoImage.png" :Model.CoverImageUrl)" class="card-img-top" alt="from database">
                                    <div class="card-body">
                                        <h5 class="card-title">@(string.IsNullOrEmpty(Model.Title)? "The name is not available":Model.Title)</h5>
                                        <p class="card-text">@(string.IsNullOrEmpty(Model.Description)? "Not available":Model.Description)</p>
                                        <div class="d-flex justify-content-between aling-items-center">
                                            <div class="btn-group">
                                                <a asp-controller="book" asp-route-id="@Model.Id" asp-action="getbook" class="btn btn-sm btn-outline-secondary">View Detail</a>
                                            </div>
                                            <small class="text-mutes">
                                                 @(string.IsNullOrEmpty(Model.Author)? "The name is not available":Model.Author)
                                            </small>
                                        </div>
                                    </div>
                                </div>